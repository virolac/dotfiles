# Variables

export XDG_CONFIG_HOME="$HOME/.config"

export EDITOR="nvim"
export VISUAL="nvim"

# Aliases

alias u="sudo pacman -Syy && sudo pacman -Su"
alias v="nvim"
alias ls="logo-ls"
alias ll="logo-ls -l"
alias la="logo-ls -Al"
alias tms="tmux-sessionizer"

# Keybindings

bindkey -s ^t "tmux-sessionizer\n"
